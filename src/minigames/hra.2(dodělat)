    nepritel_10 = pygame.draw.ellipse(okno, (0, 0, 0), (550, 50, 200, 200))
    nepritel_11 = pygame.draw.ellipse(okno, (0, 0, 0), (350, 50, 50, 50))
    nepritel_12 = pygame.draw.ellipse(okno, (0, 0, 0), (550, 500, 130, 130))
    nepritel_13 = pygame.draw.ellipse(okno, (0, 0, 0), (850, 430, 65, 65))
    nepritel_14 = pygame.draw.ellipse(okno, (0, 0, 0), (320, 650, 60, 60))
    nepritel_15 = pygame.draw.ellipse(okno, (0, 0, 0), (280, 370, 70, 70))
    
    
